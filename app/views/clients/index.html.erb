<h1>Listing clients</h1>

<table class="clientTable tablesorter">
  <thead>
    <tr>
      <th style="cursor: pointer; cursor: hand;"> <a> Name </a> </th>
      <th style="cursor: pointer; cursor: hand;"><a id="payments"> Amount Paid </a></th>
      <th></th>
      <th></th> 
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.sort_by_client_payments.each do |client| %>
      <tr>
        <td><%= link_to client.name, client_path(client.slug) %></td>
        <td>$<%= client.all_payments %></td>
      </tr>
    <% end %>
  </tbody>
</table>

