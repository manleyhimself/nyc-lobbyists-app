<h1 style="text-align:center;">Clients</h1>
<br>
<br>
<br>
<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="bs-example table-responsive">
        <table class="table table-striped table-bordered table-hover clientTable tablesorter"style="text-align:center;">
          <thead>
            <tr>
              <th style="cursor: pointer; cursor: hand; text-align:center"> <a> Name </a> </th>
              <th style="cursor: pointer; cursor: hand; text-align:center"><a id="payments"> Amount Paid </a></th>
            </tr>
          </thead>

          <tbody>
            <% @clients.sort_by_client_payments.each do |client| %>
              <tr>
                <td><%= link_to client.name, client_path(client.slug) %></td>
                <td>$<%= client.all_payments %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

