<p id="notice"><%= notice %></p>

  <div class='col-md-4 col-md-offset-2'>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
           <%= @client.name %> (client)
        </h3>
      </div>
      <div class="panel-body">
           <%= @client.address %><br>
      </div>
    </div>
  </div>  

  <div class="col-sm-6 col-sm-offset-2">
      <ul class="list-group">
      <li class="list-group-item">
        <span class="badge">$<%= @client.all_payments%></span>
        2012 Payments:
      </li>
      <li class="list-group-item">
        <span class="badge"><%= @client.lobbyists.uniq.length %> </span>
        Lobbyists Hired: 
      </li>
      <li class="list-group-item">
        <span class="badge"><%= @client.find_agencies %> </span>
        Agencies Lobbied: 
      </li>
      <li class="list-group-item">
        <span class="badge"><%= @client.actions.length %></span>
        Actions Sought: 
      </li>
    </ul>
  </div>

<div class='col-md-8 col-md-offset-2'>
