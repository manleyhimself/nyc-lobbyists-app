<h1 style="text-align:center;">Lobbyists</h1>
<br>
<br>
<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12 col-lg-offset-3">
      <div class="bs-example table-responsive lobbyTable">
        <div id="chart">

          <table class="table table-striped table-bordered table-hover lobbyTable tablesorter">
          <thead>
            <tr>
              <th style="cursor: pointer; cursor: hand;"><a> Name </a> </th>
              <th style="cursor: pointer; cursor: hand;"><a> Amount Billed Alone </a></th>
              <th style="cursor: pointer; cursor: hand;"><a> Amount Billed With a Group </a></th>
            </tr>
          </thead>
          
          <tbody>
            <% @lobbyists.sort_by_sum_payments.each do |lobbyist| %>
              <tr>
                <td><%= link_to lobbyist.name, lobbyist_path(lobbyist.slug)%></td>
                <td>
                <div class="solo">
                  $<span class="contribution"><%= lobbyist.my_payments %></span>
                </div></td>
                <td>
                  <div class="group">
                    $<span class="contribution"><%= lobbyist.team_payments%></span>
                  </div></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

