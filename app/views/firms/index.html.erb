<h1 style="text-align:center;">Firms</h1>
<br>
<br>
<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12 col-lg-offset-3">
      <div class="bs-example table-responsive firmTable tablesorter">
        <div id="chart">
          <table class="table table-striped table-bordered table-hover firmTable tablesorter">
            <thead>
              <tr>
                <th style="cursor: pointer; cursor: hand;"> <a> Name </a> </th>
                <th style="cursor: pointer; cursor: hand;"><a id="payments"> Amount Billed </a></th> 
              </tr>
            </thead>

            <tbody>
              <% @firms.sort_by_firm_payments.each do |firm| %>
                <tr>
                  <td><%= link_to firm.name , firm_path(firm.slug) %></td>
                  <td>
                  <div class="solo">
                    $<span class="contribution"><%= firm.all_payments %></td></span>
                </div></td>
                </tr>
              <% end %>
            </tbody>

          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<br>

