<h1>Listing firms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @firms.each do |firm| %>
      <tr>
        <td><%= firm.name %></td>
        <td><%= firm.address %></td>
        <td><%= link_to 'Show', firm_path(firm.slug) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

